<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}SWE Wannabe{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><rect width=%22128%22 height=%22128%22 rx=%2220%22 fill=%22%23050505%22/><text y=%2290%22 x=%2210%22 font-size=%2296%22 font-family=%22monospace%22 fill=%22%2300ff9c%22>%3E_%3C/text></svg>">
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    {% set current_path = app.request ? app.request.pathinfo : '/' %}
    <body class="app-shell" data-current-route="{{ current_path }}">
        <div class="app-terminal">
            <header class="terminal-chrome">
                <div class="chrome-dots" aria-hidden="true">
                    <span class="chrome-dot chrome-dot--close"></span>
                    <span class="chrome-dot chrome-dot--minimize"></span>
                    <span class="chrome-dot chrome-dot--maximize"></span>
                </div>
                <div class="chrome-path">~/dojo/swe-wannabe</div>
                <div class="chrome-session">mentor@wannabe</div>
            </header>
            <div class="app-grid">
                <aside class="app-panel app-nav" data-component="nav">
                    <div class="brand-lockup">
                        <span class="brand-lockup__title">SWE Wannabe</span>
                        <p class="brand-lockup__tagline">Closer to the metal. Closer to mastery.</p>
                    </div>
                    <nav class="nav-list" aria-label="Primary">
                        <a class="nav-link" href="/" data-route="/">
                            Dashboard
                            <span class="nav-link__hint">overview</span>
                        </a>
                        <a class="nav-link" href="/courses" data-route="/courses">
                            Courses
                            <span class="nav-link__hint">depth-first</span>
                        </a>
                        <a class="nav-link" href="/cli" data-route="/cli">
                            CLI
                            <span class="nav-link__hint">tooling</span>
                        </a>
                        <a class="nav-link" href="/docs" data-route="/docs">
                            Docs
                            <span class="nav-link__hint">reference</span>
                        </a>
                    </nav>
                    <div class="nav-footer">
                        <span class="status-dot"></span>
                        <span data-component="status-indicator" aria-live="polite">queue: idle</span>
                    </div>
                </aside>
                <main class="app-panel app-main" data-component="route-host" data-current-route="{{ current_path }}">
                    {% block body %}{% endblock %}
                </main>
            </div>
        </div>
    </body>
</html>
