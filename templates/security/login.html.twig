{% extends 'base.html.twig' %}

{% block title %}Sign in · SWE Wannabe{% endblock %}

{% block body %}
    <div class="card form-card">
        <p class="card-eyebrow">shell · sign-in</p>
        <h1 class="card-title" style="font-size:2rem;">Authenticate</h1>
        <p class="card-text">Use your platform credentials to continue the CLI + web workflow.</p>

        {% if error %}
            <div class="alert" role="alert">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        <form method="post">
            <div class="form-field">
                <label for="username">Email</label>
                <input
                    type="email"
                    id="username"
                    name="_username"
                    value="{{ last_username }}"
                    autocomplete="email"
                    required
                    autofocus
                >
            </div>
            <div class="form-field">
                <label for="password">Password</label>
                <input
                    type="password"
                    id="password"
                    name="_password"
                    autocomplete="current-password"
                    required
                >
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button class="submit-button" type="submit">Enter workspace</button>
        </form>
    </div>
{% endblock %}
