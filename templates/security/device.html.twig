{% extends 'base.html.twig' %}

{% block title %}Device Approval · SWE Wannabe{% endblock %}

{% block body %}
    <div class="page-stack">
        <section class="card">
            <p class="card-eyebrow">shell · device</p>
            <h1 class="card-title" style="font-size:2rem;">Authorize CLI device</h1>
            <p class="card-text">Enter the code your terminal displayed. This links the CLI session to your account.</p>
            <pre class="code-block"><code>$ swew login
&gt; enter CODE at https://localhost/device
&gt; waiting for approval…</code></pre>
        </section>

        {% if message %}
            <div class="card">
                {{ message }}
            </div>
        {% endif %}

        <section class="card form-card">
            <p class="card-eyebrow">device code</p>
            <p class="card-text">Codes expire within ten minutes; re-run <code>swew login</code> if needed.</p>
            <form method="post">
                <div class="form-field">
                    <label for="user_code">Device code</label>
                    <input type="text" id="user_code" name="user_code" placeholder="ABCD-EFGH" maxlength="9" required autofocus>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('device_verify') }}">
                <button class="submit-button" type="submit">Authorize device</button>
            </form>
        </section>
    </div>
{% endblock %}
